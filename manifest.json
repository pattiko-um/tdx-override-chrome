{
  "manifest_version": 3,
  "name": "TeamDynamix Style Override",
  "version": "1.2",
  "description": "Live overrides for style and popups on TeamDynamix.",
  "content_scripts": [
    {
      "matches": [
        "https://teamdynamix.umich.edu/TDWorkManagement/*",
        "https://teamdynamix.umich.edu/TDNext/Apps/*"
      ],
      "js": ["overrides.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://teamdynamix.umich.edu/TDWorkManagement/*",
    "https://teamdynamix.umich.edu/TDNext/Apps/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    {
      "resources": [
        "um.css",
        "greyscale.css",
        "dark-greyscale.css",
        "page-hook.js"
      ],
      "matches": ["https://teamdynamix.umich.edu/*"]
    }
  ]
}
