{
  "manifest_version": 3,
  "name": "TeamDynamix Style Override",
  "version": "1.1",
  "description": "Live overrides for style and popups on TeamDynamix.",
  "content_scripts": [
    {
      "matches": [
        "https://teamdynamix.umich.edu/TDWorkManagement/*"
      ],
      "js": ["overrides.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://teamdynamix.umich.edu/TDWorkManagement/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    {
      "resources": ["overrides.css", "greyscale.css", "dark-greyscale.css"],
      "matches": ["https://teamdynamix.umich.edu/*"]
    }
  ]
}
